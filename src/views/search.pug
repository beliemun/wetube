extends layouts/main
include mixins/searchVideoBlock

block content
    .search__container
        .search__menu
            include partials/homeMenu
        .search__content
            .search__header
                i.fas.fa-search
                h3 Searching by #{searchingBy}
            .search__videos
                if videos.length === 0
                    h5 There is no video..
                each item in videos
                    +searchVideoBlock({
                        id: item.id,
                        title: item.title,
                        views: item.views,
                        videoFile: item.videoFileUrl,
                        posterFile: item.posterFileUrl,
                        description: item.description,
                        createdAt : item.createdAt
                    })